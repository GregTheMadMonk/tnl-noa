endif()

set( tnl_implementation_operators_upwind_eikonal_SOURCES
     ${common_SOURCES}
     PARENT_SCOPE )

INSTALL( FILES ${headers} DESTINATION include/tnl-${tnlVersion}/implementation/operators/upwind-eikonal )
